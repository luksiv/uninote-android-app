<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_top_only_transparent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_assig_item_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[XXX] YYYYYYY" />

        <TextView
            android:id="@+id/tv_assig_item_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YYYY/MM/DD HH:mm" />

        <TextView
            android:id="@+id/tv_assig_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Title: XXX" />

        <TextView
            android:id="@+id/tv_assig_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: XXXXXXXX" />

    </LinearLayout>

</RelativeLayout>